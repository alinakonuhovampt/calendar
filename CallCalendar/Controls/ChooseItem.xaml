<UserControl x:Class="CallCalendar.ChooseItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CallCalendar"
             mc:Ignorable="d" d:DesignWidth="400" Height="70">
    <Grid>
        <CheckBox x:Name="checkbox" HorizontalAlignment="Left" Margin="5,0,0,0" Height="60" VerticalAlignment="Center" Width="60" VerticalContentAlignment="Center">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="3" ScaleY="3" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <Image x:Name="picture" HorizontalAlignment="Left" Height="60" Margin="70,5,0,0" VerticalAlignment="Top" Width="60" Source="/icons/phone.png" />
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Center" Height="60" Width="Auto" FontSize="36" VerticalContentAlignment="Center"/>

    </Grid>
</UserControl>
