<UserControl x:Class="CallCalendar.DateSquare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CallCalendar"
             mc:Ignorable="d"
             Width="70" Height="70">
    <Grid Background="AliceBlue" MouseDown="Click">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="13" HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Width="Auto" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" Grid.Row="0" Padding="0"/>
        <Image x:Name="picture" HorizontalAlignment="Center" Height="Auto" Margin="2" VerticalAlignment="Top" Width="Auto" Source="\icons\mom.png" Grid.Row="1"/>

    </Grid>
</UserControl>
